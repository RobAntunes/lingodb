# Lingo Database Configuration
# Copy this file to .env and customize as needed

# Database file path (optional)
# If not set, defaults to $DATA_DIR/english.lingo
# LINGO_DATABASE_PATH=/path/to/your/database.lingo

# Log level: trace, debug, info, warn, error
LINGO_LOG_LEVEL=info

# Cache size in MB (default: 100)
LINGO_CACHE_SIZE_MB=100

# Query timeout in seconds (default: 30)
LINGO_QUERY_TIMEOUT_SECS=30

# Enable performance profiling (default: false)
LINGO_ENABLE_PROFILING=false

# Data directory for storing databases
# Defaults to system data directory
# LINGO_DATA_DIR=/var/lib/lingo

# Maximum number of result nodes (default: 10000)
LINGO_MAX_RESULT_NODES=10000

# Enable debug mode (default: false)
LINGO_DEBUG=false